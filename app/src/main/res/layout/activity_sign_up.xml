<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".others.SignUpActivity"
  android:background="@drawable/background_activity"
  android:padding="5dp"
  android:orientation="vertical">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="5dp"
    android:text="Register Yourself!!"
    android:textSize="24sp"
    android:textColor="@color/colorGeneralText"
    android:textStyle="bold"
    android:fontFamily="@font/open_sans"/>

  <View
    android:layout_width="fill_parent"
    android:layout_height="2dp"
    android:background="#c0c0c0"
    android:layout_margin="10dp"/>

  <EditText
    android:id="@+id/userName"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="10dp"
    android:hint="Full Name"
    android:inputType="textPersonName|textCapWords"
    android:textColorHint="@color/colorHint"
    android:textColor="#000000"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:drawableStart="@drawable/icon_user"
    android:drawablePadding="10dp"
    android:background="@drawable/rounded_edittext"/>

  <EditText
    android:id="@+id/userEmail"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="10dp"
    android:hint="Email"
    android:inputType="textEmailAddress"
    android:textColorHint="@color/colorHint"
    android:textColor="#000000"
    android:layout_marginTop="13dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:drawableStart="@drawable/icon_email"
    android:drawablePadding="10dp"
    android:background="@drawable/rounded_edittext"/>

  <EditText
    android:id="@+id/userPassword"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="10dp"
    android:inputType="textPassword"
    android:hint="Password"
    android:textColorHint="@color/colorHint"
    android:textColor="#000000"
    android:layout_marginTop="13dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:drawableStart="@drawable/icon_lock_password"
    android:drawablePadding="10dp"
    android:background="@drawable/rounded_edittext"/>

  <EditText
    android:id="@+id/userPhone"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="10dp"
    android:hint="Phone"
    android:inputType="phone"
    android:textColorHint="@color/colorHint"
    android:textColor="#000000"
    android:layout_marginTop="13dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:drawableStart="@drawable/icon_phone"
    android:drawablePadding="10dp"
    android:background="@drawable/rounded_edittext"/>

  <View
    android:layout_width="fill_parent"
    android:layout_height="2dp"
    android:background="#c0c0c0"
    android:layout_margin="20dp"/>

  <RadioGroup
    android:id="@+id/branchRadioGroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal">

  <RadioButton
    android:id="@+id/radioCSE"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:button="@drawable/radiobutton_cse"
    android:tag="CSE"
    android:padding="5dp"
    android:checked="true"/>

  <RadioButton
    android:id="@+id/radioECE"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:button="@drawable/radiobutton_ece"
    android:tag="ECE"
    android:padding="5dp"
    />

  </RadioGroup>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="2dp"
    android:layout_margin="15dp">

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="50dp"
      android:background="@drawable/edittext_semester"/>

    <Spinner
      android:id="@+id/spinnerSemester"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@drawable/rounded_spinner"

      android:textAlignment="center"/>

  </LinearLayout>

  <View
    android:layout_weight="1"
    android:layout_width="fill_parent"
    android:layout_height="0dp"/>

  <Button
    android:id="@+id/btnRegister"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/rounded_button_shape"
    android:text="REGISTER"
    android:textColor="@color/colorGeneralText"
    android:textSize="20sp"/>





</LinearLayout>